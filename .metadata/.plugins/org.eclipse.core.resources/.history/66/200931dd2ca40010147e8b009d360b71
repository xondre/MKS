#include "sct.h"

void sct_led( uint32_t value ) {
	uint32_t val = 0x7A5C36DE;
	for(uint8_t i = 0; i < 32; i++) {


		HAL_GPIO_WritePin(SCT_SDI_GPIO_Port, SCT_SDI_Pin, (val >> i));

		HAL_GPIO_WritePin(SCT_CLK_GPIO_Port, SCT_CLK_Pin, 1); // pulse the clock port
		HAL_GPIO_WritePin(SCT_CLK_GPIO_Port, SCT_CLK_Pin, 0);
	}

	HAL_GPIO_WritePin(SCT_NLA_GPIO_Port, SCT_NLA_Pin, 1); //pulse /LA port
	HAL_GPIO_WritePin(SCT_NLA_GPIO_Port, SCT_NLA_Pin, 0);

}

void sct_init( void) {
	sct_led(0);
}
